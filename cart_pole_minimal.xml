<!-- cart_pole_minimal.xml
     1-D cart-pole, no wheels, no pole-torque actuator, no superfluous sensors.
     Matches the analytic parameters in env.cartpole.CartPoleParams (mc=1, mp=1, l=1). -->

<mujoco model="CartPoleMinimal">
    <!-- World & options -->
    <option gravity="0 0 -9.81" timestep="0.01"/>
    <worldbody>
        <geom type="plane" size="20 20 1" rgba="1 1 1 1"/>

        <!-- Cart -->
        <body name="cart" pos="0 0 0.25">
            <!-- Slide joint: 1-D motion along +x -->
            <joint name="cart_slide" type="slide" axis="1 0 0"/>

            <geom type="box" size="0.35 0.2 0.15" rgba="1 1 0.1 1" mass="1"/>

            <!-- Pole -->
            <body name="pole" pos="0 0 0" euler="0 0 180">
                <!-- Hinge around +y (standard cart-pole convention) -->
                <joint name="pole_hinge" type="hinge" pos="0 0 0" axis="0 1 0"/>

                <!-- Capsule pole: 1 m length, negligible mass (mass at the end) -->
                <geom type="capsule" fromto="0 0 0 0 0 1" size="0.05" rgba="0.4 0.4 0.8 1" mass="1e-6"/>

                <!-- Point mass at the tip -->
                <body name="tip_mass" pos="0 0 1">
                    <geom type="sphere" size="0.1" rgba="0.2 0.2 0.2 1" mass="1"/>
                </body>
            </body>
        </body>
    </worldbody>

    <!-- Actuator -->
    <actuator>
        <!-- Direct force on cart within Â±10 N (matches controller assumptions) -->
        <motor name="cart_force" joint="cart_slide"
               ctrllimited="true" ctrlrange="-10 10"/>
    </actuator>
</mujoco>
